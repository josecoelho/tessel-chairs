<%= render partial: "shared/head" %>

<div class="container-fluid">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Chairs Brow</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="<%= 'active' if current_page?(users_path) %>"><%= link_to "Users", users_path %></li>
          <li class="<%= 'active' if current_page?(chair_groups_path) %>"><%= link_to "Chair Groups", chair_groups_path %></li>
          <li class="<%= 'active' if current_page?(chairs_path) %>"><%= link_to "Chairs", chairs_path %></li>
          <li class="<%= 'active' if current_page?(chairs_managers_path) %>"><%= link_to "Chair Managers", chairs_managers_path %></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div><!--/.container-fluid -->
  </nav>

  <div class="container-fluid well">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
  </div>
</div>

<%= render partial: "shared/footer" %>